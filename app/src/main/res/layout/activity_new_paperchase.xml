<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobi.fhdo.geoschnitzeljagd.Activities.NewPaperchaseActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_new_paperchase_textview_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/paperchaseNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_new_paperchase_textview_marks"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/marksListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
