<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/paperchase_create"
                android:id="@+id/tv_paperchase_create"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paperchase_name"
                android:id="@+id/tv_paperchase_name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_paperchase_name"
                android:editable="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/paperchase_locations"
                    android:id="@+id/tv_paperchase_locations"
                    android:textSize="20sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_hint_one"
                        android:id="@+id/tv_paperchase_hint_1"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_1_hint"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_location_one"
                        android:id="@+id/tv_paperchase_location_1"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_1"
                        android:editable="false"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_set_location_1"
                        android:text="@string/button_label_paperchase_location"
                        android:onClick="onClick"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_hint_two"
                        android:id="@+id/tv_paperchase_hint_2"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_2_hint"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_location_two"
                        android:id="@+id/tv_paperchase_location_2"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_2"
                        android:editable="false"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_set_location_2"
                        android:text="@string/button_label_paperchase_location"
                        android:onClick="onClick"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_hint_three"
                        android:id="@+id/tv_paperchase_hint_3"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_3_hint"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_location_three"
                        android:id="@+id/tv_paperchase_location_3"/>

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_3"
                        android:editable="false"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_set_location_3"
                        android:text="@string/button_label_paperchase_location"
                        android:onClick="onClick"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_hint_four"
                        android:id="@+id/tv_paperchase_hint_4"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_4_hint"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_location_two"
                        android:id="@+id/tv_paperchase_location_4"/>

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_4"
                        android:editable="false"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_set_location_4"
                        android:text="@string/button_label_paperchase_location"
                        android:onClick="onClick"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_hint_five"
                        android:id="@+id/tv_paperchase_hint_5"/>
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_5_hint"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/paperchase_location_five"
                        android:id="@+id/tv_paperchase_location_5"/>

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_paperchase_location_5"
                        android:editable="false"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_set_location_5"
                        android:text="@string/button_label_paperchase_location"
                        android:onClick="onClick"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b_save_paperchase"
            android:text="@string/paperchase_save_location"
            />

    </LinearLayout>
</ScrollView>
