<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobi.fhdo.geoschnitzeljagd.newpaperchase_map">

    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mapView"
        android:layout_alignLeft="@+id/mapView"
        android:id="@+id/b_save_location"
        android:text="@string/paperchase_save_location"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b_save_location"
        android:layout_alignBaseline="@+id/b_save_location"
        android:layout_alignBottom="@+id/b_save_location"
        android:layout_alignRight="@+id/mapView"
        android:id="@+id/b_refresh_location"
        android:text="@string/paperchase_refresh_location"/>

</RelativeLayout>
